//文章列表管理
.postList {
  .replyImg {
    position absolute
    right 20px
    top 15px
    width 60px
    height 50px
  }
  .box {
    padding 12px 16px
    border-bottom 1px solid #cccccc
    position relative
    .box-head {
      overflow hidden
      line-height 30px
      height 30px
      .time {
        float right
        color #999999
        font-size 12px
      }
      .userImg {
        width 30px
        height 30px
        vertical-align middle
        margin-right 6px
      }
      .userName {
        font-size 15px
        font-weight bold
        color #333333
      }
    }
    .box-body {
      padding 10px 0
      .box-body-text {
        color #333333
        font-size 14px
        line-height 22px
      }
      .box-body-img {
        overflow hidden
        img {
          float left
          width 120px
          height 120px
        }
        .box-body-text {
          padding-left 130px
        }
      }
      .box-body-imgs {
        overflow hidden
        margin-top 5px
