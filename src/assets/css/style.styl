color333 = #333
color666 = #666
color999 = #999

html, body {
  background #f8f8f8
}

//首页
.tabbar1 {
  padding 10px 20px 50px
  background #fff
}
//积分实惠
.tabbar2 {
  padding 10px 20px 50px
  background #fff
  ul {
    li {
      position relative
      width 100%
      height 90px
      margin-bottom 10px
      > div {
        position absolute
        left 50px
        top 15px
        text-align center
        color #fff
        font-size 12px
        h2 {
          font-size 24px
          margin-bottom 8px
        }
        p {
          margin-top 8px
        }
      }
      > span {
        position absolute
        right 18px
        top 50%
        width 60px
        height 24px
        line-height 24px
        text-align center
        border 1px solid #fff
        color #ffffff
        font-size 12px
        border-radius 12px
        margin-top -12px
      }
    }
    li:nth-child(1n) {
      background url("../../assets/img/cardBg1.png") no-repeat
      background-size 100%
    }
    li:nth-child(2n) {
      background url("../../assets/img/cardBg2.png") no-repeat
      background-size 100%
    }
    li:nth-child(3n) {
      background url("../../assets/img/cardBg3.png") no-repeat
      background-size 100%
    }
  }
}
//首页广告图
.banner {
 position relative
 img {
   width 100%
   height 100%
 }
}
//首页按钮区
.iconList ul {
  overflow hidden
  li {
    float left
    width 25%
    text-align center
    color color333
    font-size 12px
    margin 10px 0 5px
    img {
      display block
      width 36px
      height 36px
      margin 0 auto 5px
    }
  }
}
//首页公告
.noticeList {
  margin 10px 0
  width 100%
  height 44px
  position relative
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 1px 1.732px 10px 0px rgba( 0, 0, 0, 0.3 );
  .noticeHead {
    position absolute
    width 47px
    height 27px
    left 10px
    top 9px
  }
  .noticeAdd {
    position absolute
    width 20px
    height 27px
    right 10px
    top 8px
  }
  a {
    width 100%
    height 100%
    display block
  }
  .scroll-wrap {
    height 30px
    line-height 30px
    overflow hidden
    position absolute
    left 62px
    top 7px
    right 40px
    .scroll-content {
      position: relative;
      transition: top 0.5s
      overflow hidden
      li{
        color: color666
        font-size: 15px
        overflow hidden
        text-overflow: ellipsis
        white-space: nowrap
        display: block
        height: 30px
        color color333
        font-size 14px
        span {
          width 30px
          height 16px
          line-height 16px
          text-align center
          border-radius 8px
          color #ff4c4c
          border 1px solid #ff4c4c
          font-size 12px
          vertical-align middle
          display inline-block
          margin-right 10px
        }
      }
    }
  }
}
//公告
.noticeIndexList {
  padding 5px 15px
  background #fff
  ul {
    li {
      width 100%
      height 100%
      border-bottom 1px solid #cccccc
      a {
        display block
        width 100%
        height 100%
        padding 10px 0
        h3 {
          color #333333
          font-size 16px
          font-weight bold
          span {
            font-weight normal
            font-size 12px
            color color999
            float right
          }
        }
        p {
          color color999
          font-size 14px
          margin-top 5px
          line-height 20px
        }
      }
    }
    li:last-child {
      border-bottom none
    }
  }
}
//公告详情
.noticeIndexDetails {
  padding 10px 15px;
  h2 {
    color #333333
    font-size 16px
    font-weight bold
  }
  .info {
    font-size 13px
    color #999999
    margin 10px 0
  }
  .content {
    color #666666
    font-size 14px
    line-height 22px
    img {
      width 100% !important
      height 100% !important
      margin-bottom 5px
    }
  }
}
//九宫格
.ninePalace {
  background #fff
  ul {
    display flex
    flex-wrap wrap
    width 100%
    li {
      width calc(calc(100% / 3))
      box-sizing border-box
      border-right 1px solid #cccccc
      border-bottom 1px solid #cccccc
      text-align center
      padding 20px 0 30px
      img {
        width 70px
        height 70px
      }
      p {
        color #333333
        font-size 14px
        margin-top 5px
      }
    }
    li:nth-child(3n) {
      border-right none
    }
  }
}
//政务咨询
.businessIndexList {
  background #ffffff
  padding 0px 15px
  ul {
    li {
      border-bottom 1px solid #cccccc
      position relative
      color #333333
      font-size 13px
      padding 15px 15px 15px 0
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      i {
        position absolute
        right 0px
        top 15px
        font-size 20px
        color #cccccc
      }
    }
    li:last-child {
      border-bottom none
    }
  }
}
.businessIndexDetails {
  padding 10px 15px
  h2 {
    color #333333
    font-size 16px
    margin-bottom 5px
    font-weight 600
  }
  div {
    color #666666
    font-size 13px
    line-height 22px
  }
}
