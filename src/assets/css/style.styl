}

//首页
.tabbar1 {
  padding 10px 20px 50px
  background #fff
}
.homeList {
  margin-bottom 15px
  .homeListTitle {
    color #333333
    font-size 17px
    border-left 4px solid #ffdf4c
    padding-left 10px
    font-weight 600
    margin 15px 0 10px
  }
  ul {
    li {
      padding 10px
      border-radius: 5px;
      background-color: #fff;
      -webkit-box-shadow: 1px 1.732px 10px 0px rgba(0,0,0,0.3);
      box-shadow: 1px 1.732px 10px 0px rgba(0,0,0,0.3);
      margin-bottom 10px
      a {
        width 100%
        height 100%
        display block
        .homeListImg {
          img {
            width 100%
            height 220px
          }
        }
        .homeListName {
          color #333
          font-size 14px
          line-height 22px
          font-weight 600
          margin 8px 0
        }
        .homeListTip {
          overflow hidden
          color #999999
          font-size 12px
          img {
            vertical-align middle
            width 18px
            margin-right 5px
          }
        }
      }
    }
    li:last-child {
      margin-bottom 0px
    }
  }
}
//积分实惠
.tabbar2 {
  padding 10px 20px 50px
  background #fff
  ul {
    li {
      position relative
      width 100%
      height 90px
      margin-bottom 10px
      > div {
        position absolute
        left 50px
        top 15px
        text-align center
        color #fff
        font-size 12px
        h2 {
          font-size 24px
          margin-bottom 8px
        }
        p {
          margin-top 8px
        }
      }
      > span {
        position absolute
        right 18px
        top 50%
        width 60px
        height 24px
        line-height 24px
        text-align center
        border 1px solid #fff
        color #ffffff
        font-size 12px
        border-radius 12px
        margin-top -12px
      }
    }
    li:nth-child(1n) {
      background url("../../assets/img/cardBg1.png") no-repeat
      background-size 100%
    }
    li:nth-child(2n) {
      background url("../../assets/img/cardBg2.png") no-repeat
      background-size 100%
    }
    li:nth-child(3n) {
      background url("../../assets/img/cardBg3.png") no-repeat
      background-size 100%
    }
  }
}
